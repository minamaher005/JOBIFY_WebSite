                    new { Name = "TechCorp", Logo = "üöÄ", Positions = 15, Description = "Leading cloud infrastructure company" },
                    new { Name = "DataFlow", Logo = "üìä", Positions = 8, Description = "AI and machine learning solutions" },
                    new { Name = "CodeCraft", Logo = "üíª", Positions = 12, Description = "Custom software development" },
                    new { Name = "CloudNine", Logo = "‚òÅÔ∏è", Positions = 20, Description = "Enterprise cloud services" },
