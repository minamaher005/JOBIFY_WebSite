    <div class="container">
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h3 class="fs-4 fw-bold mb-3"><i class="bi bi-info-circle text-primary me-2"></i>About TechConnect</h3>
                        <p>TechConnect Job Fair is an annual event that brings together leading technology companies and talented professionals. Whether you're a recent graduate, an experienced professional, or looking to make a career transition into tech, this event offers something for everyone.</p>
                        <p>Our mission is to connect job seekers with meaningful career opportunities and help companies find the perfect candidates to fuel their growth.</p>
                        <div class="d-flex mt-4">
                            <a asp-controller="Home" asp-action="Privacy" class="btn btn-outline-primary me-3">
                                <i class="bi bi-shield-check me-2"></i>Privacy Policy
                            </a>
                            <a href="mailto:info@techconnectjobfair.com" class="btn btn-outline-primary">
                                <i class="bi bi-envelope me-2"></i>Contact Us
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h3 class="fs-4 fw-bold mb-3"><i class="bi bi-check-circle text-primary me-2"></i>For Job Seekers</h3>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check-lg text-success me-2"></i>Connect with 50+ leading tech companies</li>
                            <li class="mb-2"><i class="bi bi-check-lg text-success me-2"></i>Explore 1000+ open positions</li>
                            <li class="mb-2"><i class="bi bi-check-lg text-success me-2"></i>Participate in on-site interviews</li>
                            <li class="mb-2"><i class="bi bi-check-lg text-success me-2"></i>Attend career development workshops</li>
                            <li class="mb-2"><i class="bi bi-check-lg text-success me-2"></i>Network with industry professionals</li>
                        </ul>
                        @if (User.Identity != null && !User.Identity.IsAuthenticated)
                        {
                            <div class="mt-4">
                                <a asp-controller="Account" asp-action="RegisterJobSeeker" class="btn btn-primary">
                                    <i class="bi bi-person-plus me-2"></i>Register as Job Seeker
                                </a>
                            </div>
                        }
                        else if (User.IsInRole("JobSeeker"))
                        {
                            <div class="mt-4">
                                <a asp-controller="Jobs" asp-action="Search" class="btn btn-primary">
                                    <i class="bi bi-search me-2"></i>Browse Jobs
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Employer Section -->
@if (User.Identity != null && !User.Identity.IsAuthenticated)
{
    <section class="py-5 bg-primary bg-opacity-10">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <h2 class="display-6 fw-bold text-primary mb-3">Are You an Employer?</h2>
                    <p class="fs-5 mb-4">Join TechConnect as an employer and connect with thousands of talented professionals. Our platform offers powerful tools to help you find the perfect candidates for your open positions.</p>
                    <ul class="list-unstyled mb-4">
                        <li class="mb-3"><i class="bi bi-check-circle-fill text-primary me-2"></i>Post unlimited job listings</li>
                        <li class="mb-3"><i class="bi bi-check-circle-fill text-primary me-2"></i>Search our database of qualified candidates</li>
                        <li class="mb-3"><i class="bi bi-check-circle-fill text-primary me-2"></i>Manage applications efficiently</li>
                        <li class="mb-3"><i class="bi bi-check-circle-fill text-primary me-2"></i>Showcase your company brand</li>
                    </ul>
                    <a asp-controller="Account" asp-action="RegisterEmployee" class="btn btn-primary btn-lg">
                        <i class="bi bi-building me-2"></i>Register as Employer
                    </a>
                </div>
                <div class="col-lg-5 d-none d-lg-block text-center">
                    <img src="https://via.placeholder.com/500x400?text=Employer+Tools" alt="Employer Tools Illustration" class="img-fluid rounded-3 shadow" />
                </div>
            </div>
        </div>
    </section>
}
else if (User.IsInRole("Employee"))
{
    <section class="py-5 bg-primary bg-opacity-10">
        <div class="container">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h3 class="fs-4 fw-bold mb-3"><i class="bi bi-briefcase-fill text-primary me-2"></i>Employer Tools</h3>
                    <p>Manage your job listings and candidate applications with our comprehensive employer tools.</p>
                    <div class="d-flex gap-3 mt-4">
                        <a asp-controller="Jobs" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-2"></i>Post New Job
                        </a>
                        <a asp-controller="Applications" asp-action="AllApplications" class="btn btn-outline-primary">
                            <i class="bi bi-file-earmark-text me-2"></i>View Applications
                        </a>
                        <a asp-controller="Employee" asp-action="Dashboard" class="btn btn-outline-primary">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    <script>
        // Smooth scrolling for anchor links
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const target = document.querySelector(targetId);
                    if (target) {
                        window.scrollTo({
                            top: target.offsetTop - 70,
                            behavior: 'smooth'
                        });
                    }
                });
            });
        });
    </script>
}
