@{
    ViewData["Title"] = "TechConnect Job Fair 2024";
}

<style>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap");
    body {
        font-family: "Inter", sans-serif;
    }
    .gradient-bg {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    }
</style>

<!-- Hero Section -->
<section id="home" class="gradient-bg text-white py-5">
    <div class="container text-center py-4">
        <h1 class="display-3 fw-bold mb-4">TechConnect Job Fair 2024</h1>
        <p class="fs-4 mb-4 opacity-90">Connect with top tech companies and launch your career</p>
        <div class="d-flex flex-column flex-sm-row gap-4 justify-content-center align-items-center mb-5">
            <div class="d-flex align-items-center">
                <i class="bi bi-calendar-event me-2 fs-5"></i>
                March 15, 2024
            </div>
            <div class="d-flex align-items-center">
                <i class="bi bi-geo-alt me-2 fs-5"></i>
                Tech Convention Center
            </div>
            <div class="d-flex align-items-center">
                <i class="bi bi-clock me-2 fs-5"></i>
                9:00 AM - 5:00 PM
            </div>
        </div>
        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
            @if (User.Identity != null && !User.Identity.IsAuthenticated)
            {
                <a asp-controller="Account" asp-action="Register" class="btn btn-light text-primary px-4 py-3 rounded-3 fw-semibold">
                    Register Now - Free
                </a>
                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-light px-4 py-3 rounded-3 fw-semibold">
                    View Companies
                </a>
            }
            else
            {
                @if (User.IsInRole("JobSeeker"))
                {
                    <a asp-controller="JobSeeker" asp-action="Dashboard" class="btn btn-light text-primary px-4 py-3 rounded-3 fw-semibold">
                        <i class="bi bi-speedometer2 me-2"></i>My Dashboard
                    </a>
                    <a asp-controller="Jobs" asp-action="Search" class="btn btn-outline-light px-4 py-3 rounded-3 fw-semibold">
                        <i class="bi bi-search me-2"></i>Find Jobs
                    </a>
                }
                else if (User.IsInRole("Employee"))
                {
                    <a asp-controller="Jobs" asp-action="Index" class="btn btn-light text-primary px-4 py-3 rounded-3 fw-semibold">
                        <i class="bi bi-briefcase me-2"></i>Manage Jobs
                    </a>
                    <a asp-controller="Jobs" asp-action="Create" class="btn btn-outline-light px-4 py-3 rounded-3 fw-semibold">
                        <i class="bi bi-plus-lg me-2"></i>Post a Job
                    </a>
                }
            }
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="py-5 bg-white">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold text-dark mb-3">Why Attend TechConnect?</h2>
            <p class="fs-5 text-secondary mx-auto" style="max-width: 800px;">
                The premier technology job fair bringing together innovative companies and talented professionals
            </p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center p-4 card-hover bg-light rounded-4">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-building fs-1 text-primary"></i>
                    </div>
                    <h3 class="fs-4 fw-semibold mb-3">50+ Top Companies</h3>
                    <p class="text-secondary">
                        Connect with industry leaders from tech, finance, healthcare, and more seeking talented professionals
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center p-4 card-hover bg-light rounded-4">
                    <div class="bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-briefcase fs-1 text-success"></i>
                    </div>
                    <h3 class="fs-4 fw-semibold mb-3">1000+ Open Positions</h3>
                    <p class="text-secondary">
                        Explore opportunities across all experience levels from entry-level to senior leadership roles
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center p-4 card-hover bg-light rounded-4">
                    <div class="bg-purple bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-people fs-1 text-purple"></i>
                    </div>
                    <h3 class="fs-4 fw-semibold mb-3">On-Site Interviews</h3>
                    <p class="text-secondary">
                        Get interviewed on the spot and potentially receive same-day offers from interested employers
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

