<!-- Quick Search Section -->
<!-- Quick Search Section -->
<section id="quick-search" class="py-5 angled-section">
    <div class="container">
        <div class="text-center mb-5 section-title">
            <h2 class="display-5 fw-bold text-dark mb-3">Quick Job Search</h2>
            <p class="fs-5 text-secondary">
                Find your next opportunity in seconds
            </p>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <form asp-controller="Jobs" asp-action="Search" method="get" class="card shadow-sm glass-effect">
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-5">
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                                    <input type="text" name="searchTerm" class="form-control form-control-lg" placeholder="Job title, keywords, or company">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <select name="locationId" class="form-select form-select-lg">
                                    <option value="">All Locations</option>
                                    <!-- Locations will be populated from the database -->
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary btn-lg w-100">Search</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="row mt-5 g-4 justify-content-center">
            <div class="col-md-3 text-center">
                <div class="bg-light p-4 rounded-4 card-hover">
                    <i class="bi bi-code-square fs-1 text-primary mb-3"></i>
                    <h3 class="fs-5 fw-semibold">Technology</h3>
                    <p class="text-secondary mb-3">Software, IT, Data</p>
                    <a asp-controller="Jobs" asp-action="Search" asp-route-categoryId="1" class="btn btn-outline-primary btn-sm" data-category="1">Browse Jobs</a>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <div class="bg-light p-4 rounded-4 card-hover">
                    <i class="bi bi-graph-up fs-1 text-success mb-3"></i>
                    <h3 class="fs-5 fw-semibold">Business</h3>
                    <p class="text-secondary mb-3">Marketing, Sales, Finance</p>
                    <a asp-controller="Jobs" asp-action="Search" asp-route-categoryId="2" class="btn btn-outline-primary btn-sm" data-category="2">Browse Jobs</a>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <div class="bg-light p-4 rounded-4 card-hover">
                    <i class="bi bi-palette fs-1 text-purple mb-3"></i>
                    <h3 class="fs-5 fw-semibold">Creative</h3>
                    <p class="text-secondary mb-3">Design, Media, Art</p>
                    <a asp-controller="Jobs" asp-action="Search" asp-route-categoryId="3" class="btn btn-outline-primary btn-sm" data-category="3">Browse Jobs</a>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <div class="bg-light p-4 rounded-4 card-hover">
                    <i class="bi bi-heart-pulse fs-1 text-danger mb-3"></i>
                    <h3 class="fs-5 fw-semibold">Healthcare</h3>
                    <p class="text-secondary mb-3">Medical, Nursing, Pharmacy</p>
                    <a asp-controller="Jobs" asp-action="Search" asp-route-categoryId="4" class="btn btn-outline-primary btn-sm" data-category="4">Browse Jobs</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section id="cta" class="py-5 bg-gradient-primary text-white">
    <div class="container text-center" style="max-width: 800px;">
        <h2 class="display-5 fw-bold mb-3">Ready to Find Your Dream Job?</h2>
        <p class="fs-5 opacity-90 mb-4">
            Create your profile today and start applying to thousands of jobs
        </p>
        
        @if (User.Identity != null && !User.Identity.IsAuthenticated)
        {
            <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                <a asp-controller="Account" asp-action="Register" class="btn btn-light text-primary px-4 py-3 rounded-3 fw-semibold">
                    <i class="bi bi-person-plus me-2"></i>Create Account
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light px-4 py-3 rounded-3 fw-semibold">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                </a>
            </div>
        }
        else
        {
            <a asp-controller="Jobs" asp-action="Search" class="btn btn-light text-primary px-4 py-3 rounded-3 fw-semibold">
                <i class="bi bi-search me-2"></i>Browse Available Jobs
            </a>
        }
    </div>
</section>
