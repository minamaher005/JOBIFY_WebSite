@{
    ViewData["Title"] = "Job Portal";
    ViewData["TransparentBackground"] = "true";
}

<!-- Hero Section -->
<section id="home" class="bg-gradient-primary text-white py-5">
    <div class="container text-center py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-3 fw-bold mb-4">Find Your Dream Job Today</h1>
                <p class="fs-4 mb-4 opacity-90">Connect with top employers and launch your career</p>
                
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                    @if (User.Identity != null && !User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-warning text-primary px-4 py-3 rounded-3 fw-semibold btn-with-icon">
                            <i class="bi bi-person-plus"></i> Register Now
                        </a>
                        <a asp-controller="Jobs" asp-action="Search" class="btn btn-outline-light px-4 py-3 rounded-3 fw-semibold btn-with-icon">
                            <i class="bi bi-search"></i> Browse Jobs
                        </a>
                    }
            else
            {
                @if (User.IsInRole("JobSeeker"))
                {
                    <a asp-controller="JobSeeker" asp-action="Dashboard" class="btn btn-warning text-primary px-4 py-3 rounded-3 fw-semibold btn-with-icon">
                        <i class="bi bi-speedometer2 me-2"></i>My Dashboard
                    </a>
                    <a asp-controller="Jobs" asp-action="Search" class="btn btn-outline-light px-4 py-3 rounded-3 fw-semibold btn-with-icon">
                        <i class="bi bi-search me-2"></i>Find Jobs
                    </a>
                }
                else if (User.IsInRole("Employee"))
                {
                    <a asp-controller="Jobs" asp-action="Index" class="btn btn-warning text-primary px-4 py-3 rounded-3 fw-semibold btn-with-icon">
                        <i class="bi bi-briefcase me-2"></i>Manage Jobs
                    </a>
                    <a asp-controller="Jobs" asp-action="Create" class="btn btn-outline-light px-4 py-3 rounded-3 fw-semibold btn-with-icon">
                        <i class="bi bi-plus-lg me-2"></i>Post a Job
                    </a>
                }
            }
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="about" class="py-5 angled-section">
    <div class="container main-container">
        <div class="text-center mb-5 section-title">
            <h2 class="display-5 fw-bold text-dark mb-3">Why Choose Our Job Portal?</h2>
