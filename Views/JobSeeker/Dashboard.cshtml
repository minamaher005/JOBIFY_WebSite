@model WebApplication2.ViewModels.JobSeekerDashboardViewModel

@{
    ViewData["Title"] = "Job Seeker Dashboard";
}

<!-- Dashboard Header -->
<section class="gradient-bg text-white py-4">
    <div class="container">
        <h1 class="display-5 fw-bold mb-2">My Dashboard</h1>
        <p class="fs-5 opacity-90">Manage your job applications and profile</p>
    </div>
</section>

<div class="container py-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    @if (!string.IsNullOrEmpty(Model.JobSeeker.ProfilePictureUrl))
                    {
                        <img src="@Model.JobSeeker.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 100px; height: 100px;">
                            <i class="bi bi-person-fill" style="font-size: 3rem;"></i>
                        </div>
                    }
                    
                    <h5 class="fw-bold mb-1">@(Model.JobSeeker.User?.FirstName ?? "") @(Model.JobSeeker.User?.LastName ?? "")</h5>
                    <p class="text-muted mb-3">Job Seeker</p>
                    
                    <div class="progress mb-2" style="height: 8px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @Model.ProfileCompletionPercentage%;" aria-valuenow="@Model.ProfileCompletionPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <p class="text-muted small mb-3">@Model.ProfileCompletionPercentage% Profile Completion</p>
                    
                    <div class="d-grid gap-2">
                        <a asp-controller="Jobs" asp-action="Search" class="btn btn-primary">
                            <i class="bi bi-search me-2"></i>Find Jobs
                        </a>
                        <a asp-controller="JobSeeker" asp-action="Edit" asp-route-id="@Model.JobSeeker.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil me-2"></i>Edit Profile
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="list-group shadow-sm mt-4 rounded-3 overflow-hidden">
                <a asp-controller="JobSeeker" asp-action="Dashboard" class="list-group-item list-group-item-action active border-0 py-3">
                    <i class="bi bi-speedometer2 me-2"></i>Dashboard
                </a>
                <a asp-controller="Jobs" asp-action="SavedJobs" class="list-group-item list-group-item-action border-0 py-3">
                    <i class="bi bi-bookmark me-2"></i>Saved Jobs
                    <span class="badge bg-primary rounded-pill float-end">@Model.SavedJobsCount</span>
                </a>
                <a asp-controller="Applications" asp-action="MyApplications" class="list-group-item list-group-item-action border-0 py-3">
                    <i class="bi bi-file-earmark-text me-2"></i>My Applications
                    <span class="badge bg-primary rounded-pill float-end">@Model.AppliedJobsCount</span>
                </a>
                <a asp-controller="Account" asp-action="Logout" class="list-group-item list-group-item-action text-danger border-0 py-3">
                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                </a>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Summary Cards -->
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 card-hover">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px; min-width: 60px;">
                                    <i class="bi bi-bookmark-fill fs-3"></i>
                                </div>
                                <div>
                                    <h6 class="text-muted mb-1">Saved Jobs</h6>
                                    <h2 class="fw-bold mb-0">@Model.SavedJobsCount</h2>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 pt-0 pb-3 px-4">
                            <a asp-controller="Jobs" asp-action="SavedJobs" class="btn btn-sm btn-link text-primary p-0">
                                View All <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 card-hover">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px; min-width: 60px;">
                                    <i class="bi bi-file-earmark-text-fill fs-3"></i>
                                </div>
                                <div>
                                    <h6 class="text-muted mb-1">Applications</h6>
                                    <h2 class="fw-bold mb-0">@Model.AppliedJobsCount</h2>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 pt-0 pb-3 px-4">
                            <a asp-controller="Applications" asp-action="MyApplications" class="btn btn-sm btn-link text-success p-0">
                                View All <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 card-hover">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-purple bg-opacity-10 text-purple rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px; min-width: 60px;">
                                    <i class="bi bi-person-badge-fill fs-3"></i>
                                </div>
                                <div>
                                    <h6 class="text-muted mb-1">Skills</h6>
                                    <h2 class="fw-bold mb-0">@Model.Skills.Count</h2>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 pt-0 pb-3 px-4">
                            <a asp-controller="JobSeeker" asp-action="Edit" asp-route-id="@Model.JobSeeker.Id" class="btn btn-sm btn-link text-purple p-0">
                                Update Skills <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Recent Jobs -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white p-4 border-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0"><i class="bi bi-briefcase text-primary me-2"></i>Recent Job Postings</h5>
                    <a asp-controller="Jobs" asp-action="Search" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var job in Model.RecentJobs)
                        {
                            <div class="list-group-item p-4 border-0 border-bottom">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="fw-bold mb-1">@job.JobTitle</h6>
                                        <p class="mb-2 text-primary">@job.Company.Name</p>
                                        <div class="d-flex flex-wrap gap-2">
                                            <span class="badge bg-light text-dark">
                                                <i class="bi bi-geo-alt me-1"></i>@job.Location.LocationName
                                            </span>
                                            <span class="badge bg-light text-dark">
                                                <i class="bi bi-briefcase me-1"></i>@job.EmploymentType.TypeName
                                            </span>
                                            <span class="badge bg-light text-dark">
                                                <i class="bi bi-clock me-1"></i>Posted @((DateTime.Now - job.PostedDate).Days) days ago
                                            </span>
                                        </div>
                                    </div>
                                    <div>
                                        <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" class="btn btn-primary">
                                            <i class="bi bi-eye me-2"></i>View
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        
                        @if (!Model.RecentJobs.Any())
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-briefcase fs-1 text-primary mb-3"></i>
                                <p class="text-muted">No recent job postings found</p>
                                <a asp-controller="Jobs" asp-action="Search" class="btn btn-primary mt-3">
                                    <i class="bi bi-search me-2"></i>Browse Jobs
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Skills Section -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white p-4 border-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0"><i class="bi bi-award text-primary me-2"></i>Your Skills</h5>
                    <a asp-controller="JobSeeker" asp-action="Edit" asp-route-id="@Model.JobSeeker.Id" class="btn btn-sm btn-outline-primary">Update Skills</a>
                </div>
                <div class="card-body p-4">
                    @if (Model.Skills.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var skill in Model.Skills)
                            {
                                <span class="badge bg-primary bg-opacity-10 text-dark px-3 py-2 rounded-pill fw-semibold">@skill.SkillName</span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-award fs-1 text-primary mb-3"></i>
                            <p class="text-muted mb-3">No skills added yet</p>
                            <a asp-controller="JobSeeker" asp-action="Edit" asp-route-id="@Model.JobSeeker.Id" class="btn btn-primary">
                                <i class="bi bi-plus-lg me-2"></i>Add Skills
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
