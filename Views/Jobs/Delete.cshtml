@model WebApplication2.Models.Job

@{
    ViewData["Title"] = "Delete Job";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h3>Are you sure you want to delete this job?</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <strong>Warning!</strong> This action cannot be undone. All applications for this job will be deleted as well.
        </div>
        
        <dl class="row">
            <dt class="col-sm-3">Job Title</dt>
            <dd class="col-sm-9">@Model.JobTitle</dd>
            
            <dt class="col-sm-3">Company</dt>
            <dd class="col-sm-9">@Model.Company.Name</dd>
            
            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Model.Location.LocationName</dd>
            
            <dt class="col-sm-3">Posted Date</dt>
            <dd class="col-sm-9">@Model.PostedDate.ToString("MMM dd, yyyy")</dd>
            
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.JobStatus.StatusName</dd>
            
            <dt class="col-sm-3">Applications</dt>
            <dd class="col-sm-9">@Model.Applications.Count</dd>
        </dl>
        
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
