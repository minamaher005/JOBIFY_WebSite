@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/form-enhancements.css" />

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Create an Account</h1>
        <p class="lead text-muted">Choose the type of account you'd like to create</p>
    </div>
    
    <div class="row g-4 justify-content-center">
        <div class="col-md-5">
            <div class="card h-100 shadow-sm glass-effect">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto" style="width: 90px; height: 90px; background-color: rgba(17, 63, 103, 0.1) !important;">
                            <i class="bi bi-person-badge fs-1 text-primary"></i>
                        </div>
                    </div>
                    <h2 class="h3 mb-3 fw-bold">Job Seeker</h2>
                    <p class="mb-4 text-muted">Looking for your next career opportunity? Register as a job seeker to search and apply for jobs, save your favorite listings, and track your applications.</p>
                    <a asp-controller="JobSeeker" asp-action="Create" class="btn btn-primary btn-lg px-4">
                        Register as Job Seeker
                    </a>
                </div>
                <div class="card-footer bg-light p-4" style="background-color: rgba(253, 245, 170, 0.2) !important;">
                    <h5 class="mb-3 fw-bold">What you can do:</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Search and apply for jobs</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Save favorite job listings</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Track your applications</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Build a professional profile</li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="col-md-5">
            <div class="card h-100 shadow-sm glass-effect">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto" style="width: 90px; height: 90px; background-color: rgba(17, 63, 103, 0.1) !important;">
                            <i class="bi bi-building fs-1 text-primary"></i>
                        </div>
                    </div>
                    <h2 class="h3 mb-3 fw-bold">Employer</h2>
                    <p class="mb-4 text-muted">Representing a company? Register as an employer to post job openings, review applications, and find the best talent for your organization.</p>
                    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary btn-lg px-4">
                        Register as Employer
                    </a>
                </div>
                <div class="card-footer bg-light p-4" style="background-color: rgba(253, 245, 170, 0.2) !important;">
                    <h5 class="mb-3 fw-bold">What you can do:</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Post job openings</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Review job applications</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Manage job listings</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Find qualified candidates</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <div class="text-center mt-5">
        <p>Already have an account? <a asp-controller="Account" asp-action="Login" class="fw-bold text-decoration-none">Log in here</a></p>
        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
            <i class="bi bi-arrow-left me-1"></i> Back to Home
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // Add hover effect animation for cards
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px)';
                    this.style.transition = 'transform 0.3s ease';
                    this.style.boxShadow = '0 10px 25px rgba(0, 0, 0, 0.1)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '0 .125rem .25rem rgba(0, 0, 0, .075)';
                });
            });
        });
    </script>
}
