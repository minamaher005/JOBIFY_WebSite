@model WebApplication2.ViewModels.CompanyCreateViewModel

<div class="modal-header">
    <h5 class="modal-title">Add New Company</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form asp-action="CreateCompany" asp-controller="Employee" method="post" enctype="multipart/form-data" id="createCompanyForm">
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <h5>Company Information</h5>
        <hr />
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IndustryName" class="form-label"></label>
            <input asp-for="IndustryName" class="form-control" placeholder="Enter industry (e.g., Technology, Healthcare)" />
            <span asp-validation-for="IndustryName" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="FoundationDate" class="form-label"></label>
                <input asp-for="FoundationDate" class="form-control" />
                <span asp-validation-for="FoundationDate" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="CompanySize" class="form-label"></label>
                <input asp-for="CompanySize" class="form-control" />
                <span asp-validation-for="CompanySize" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="Website" class="form-label"></label>
            <input asp-for="Website" class="form-control" />
            <span asp-validation-for="Website" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="HeadquartersLocation" class="form-label"></label>
            <input asp-for="HeadquartersLocation" class="form-control" />
            <span asp-validation-for="HeadquartersLocation" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LogoFile" class="form-label"></label>
            <input asp-for="LogoFile" type="file" class="form-control" accept="image/*" />
            <span asp-validation-for="LogoFile" class="text-danger"></span>
        </div>
        
        <h5>Branch Information</h5>
        <hr />
        <div id="branchesContainer">
            <div class="branch-item mb-3 border p-3">
                <div class="row mb-2">
                    <div class="col-md-6">
                        <label asp-for="Branches[0].BranchLocation" class="form-label">Branch Location</label>
                        <input name="Branches[0].BranchLocation" class="form-control" />
                        <span data-valmsg-for="Branches[0].BranchLocation" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Branches[0].PhoneNumber" class="form-label">Phone Number</label>
                        <input name="Branches[0].PhoneNumber" class="form-control" />
                        <span data-valmsg-for="Branches[0].PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-outline-secondary" id="addBranchBtn">
            <i class="bi bi-plus-circle"></i> Add Another Branch
        </button>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Create Company</button>
    </div>
</form>

<script>
    // Initialize validation
    $(document).ready(function() {
        // Track branch count
        let branchIndex = 1;
        
        // Add branch button handler
        $("#addBranchBtn").click(function() {
            const newBranch = `
                <div class="branch-item mb-3 border p-3">
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <label class="form-label">Branch Location</label>
                            <input name="Branches[${branchIndex}].BranchLocation" class="form-control" required />
                            <span data-valmsg-for="Branches[${branchIndex}].BranchLocation" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone Number</label>
                            <input name="Branches[${branchIndex}].PhoneNumber" class="form-control" />
                            <span data-valmsg-for="Branches[${branchIndex}].PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-danger remove-branch">Remove</button>
                </div>
            `;
            
            $("#branchesContainer").append(newBranch);
            branchIndex++;
        });
        
        // Remove branch button handler (delegated event)
        $("#branchesContainer").on("click", ".remove-branch", function() {
            $(this).closest(".branch-item").remove();
        });
    });
</script>
